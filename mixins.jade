mixin if(condition)
  +php-function('if', condition)
    block
mixin else()
  <?php else { ?>
  block
  <?php } ?>

mixin foreach(condition)
  +php-function('foreach', condition)
    block

mixin var(name, value)
  <?php $!{name} = !{value}; ?>

mixin php-function(name, args)
  <?php !{name} (!{args}) { ?>
  block
  <?php } ?>
